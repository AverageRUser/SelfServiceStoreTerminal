<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TradeCompApp.HelpPage"
              Title="Помощь"
             BackgroundColor="{StaticResource PageBackground}">

    <ScrollView>
        <VerticalStackLayout Padding="30,20" Spacing="30">

            <!-- Заголовок -->
            <Label Text="Инструкция по использованию" 
                   FontSize="28"
                   TextColor="{StaticResource PrimaryText}"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <!-- Карточка с инструкциями -->
            <Frame BorderColor="{StaticResource SecondaryButton}"
                   BackgroundColor="White"
                   CornerRadius="16"
                   Padding="20"
                   HasShadow="True">

                <VerticalStackLayout Spacing="15">
                    <!-- Шаг 1 -->
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="1." 
                               FontSize="20"
                               TextColor="{StaticResource PrimaryButton}"
                               FontAttributes="Bold"
                               VerticalOptions="Center"/>
                        <Label Text="Отсканируйте товары штрих-кодом" 
                               FontSize="18"
                               TextColor="{StaticResource PrimaryText}"
                               VerticalOptions="Center"/>
                        <Image Source="scan_icon.png" 
                               WidthRequest="24"
                               HeightRequest="24"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                
                    <BoxView HeightRequest="1"  BackgroundColor="#E2E8F0"   HorizontalOptions="Fill"/>

                    <HorizontalStackLayout Spacing="10">
                        <Label Text="2." 
                               FontSize="20"
                               TextColor="{StaticResource PrimaryButton}"
                               FontAttributes="Bold"
                               VerticalOptions="Center"/>
                        <Label Text="Перейдите к оплате в корзине" 
                               FontSize="18"
                               TextColor="{StaticResource PrimaryText}"
                               VerticalOptions="Center"/>
                        <Image Source="cart_icon.png" 
                               WidthRequest="24"
                               HeightRequest="24"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                
                    <BoxView HeightRequest="1"  BackgroundColor="#E2E8F0"   HorizontalOptions="Fill"/>

             
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="3." 
                               FontSize="20"
                               TextColor="{StaticResource PrimaryButton}"
                               FontAttributes="Bold"
                               VerticalOptions="Center"/>
                        <Label Text="Выберите способ оплаты и завершите покупку" 
                               FontSize="18"
                               TextColor="{StaticResource PrimaryText}"
                               VerticalOptions="Center"/>
                        <Image Source="payment_icon.png" 
                               WidthRequest="24"
                               HeightRequest="24"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>


            <Button Text="Вызвать сотрудника"  Clicked="OnCallStaffClicked"  HeightRequest="70" FontSize="18" CornerRadius="12"    BackgroundColor="{StaticResource PrimaryButton}" TextColor="White"       HorizontalOptions="Center"  WidthRequest="300"/>



            <Label Text="Если у вас возникли сложности, нажмите кнопку выше"  FontSize="14"    TextColor="{StaticResource SecondaryText}" HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>