<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TradeCompApp.MainPage" >

    <ScrollView>
      
        <VerticalStackLayout Padding="30,0" Spacing="25" VerticalOptions="Center" HorizontalOptions="Center">

            <Label   Text="Добро пожаловать!" Style="{StaticResource Headline}" SemanticProperties.HeadingLevel="Level1" />

            <Button Text="Выбрать товар в каталоге"  Clicked="OnCounterClicked"   WidthRequest="400" HeightRequest="80" FontSize="18" CornerRadius="10"  />
            <Button Text="Помощь сотрудника" Clicked="OnHelpClicked"   WidthRequest="400" HeightRequest="60" FontSize="16" CornerRadius="8"/>
         
           
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
