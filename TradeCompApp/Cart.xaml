<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TradeCompApp.Cart"
             Title="Cart">
    <VerticalStackLayout Spacing="20" Padding="20">
        <Label Text="Ваши товары:" FontSize="Large" />
        <ListView x:Name="CartItemsList">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <HorizontalStackLayout>
                            <Label Text="{Binding Name}" />
                            <Label Text="{Binding Price, StringFormat='{0:C}'}" />
                            <Label Text="{Binding Quantity, StringFormat='x{0}'}" />
                        </HorizontalStackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Label x:Name="TotalLabel" FontSize="Medium" />
        <Button Text="Добавить товар вручную" Clicked="OnAddManualProductClicked" />
        <Button Text="Перейти к оплате" Clicked="OnProceedToPaymentClicked" />
        <Button Text="Продолжить покупки" Clicked="OnContinueShoppingClicked" />
    </VerticalStackLayout>
</ContentPage>