<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TradeCompApp.Cart"
              xmlns:viewmodels="clr-namespace:TradeCompApp.ViewModels"
             Title="Cart">
    <VerticalStackLayout Spacing="20" Padding="20">
        <Label Text="Ваши товары:" FontSize="Large" />
        <ListView x:Name="CartItemsList" ItemsSource="{Binding CartProduction}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <HorizontalStackLayout>
                            <Label Text="{Binding Product.Name}" FontSize="Medium" />
                            <Label Text="{Binding Product.Price, StringFormat='{0:C}'}" FontSize="Small" />
                           
                            <Button Text="Удалить"
           Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:CartViewModel}}, Path=RemoveCommand}"
           CommandParameter="{Binding .}" />
                        </HorizontalStackLayout>
                        
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
     
        <Label Text="{Binding TotalPrice, StringFormat='Итого: {0:C}'}" />
        <Button Text="Добавить товар вручную" Clicked="OnAddManualProductClicked" />
        <Button Text="Перейти к оплате" Clicked="OnProceedToPaymentClicked" />
        <Button Text="Продолжить покупки" Clicked="OnContinueShoppingClicked" />
    </VerticalStackLayout>
</ContentPage>